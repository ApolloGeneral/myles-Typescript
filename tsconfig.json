{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/**/*",
    "src/**/*",
    "src/**/**/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}